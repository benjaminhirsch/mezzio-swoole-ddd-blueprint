{% extends '@layout/default.twig' %}

{% block title %}Register{% endblock %}

{% block content %}
    <form action="{{ url("register") }}" method="post">
        <div class="mb-3">
            {{ include('input/text.twig', {fieldLabel: 'Identity', fieldId: 'identity', type: 'text'}) }}
        </div>
        <div class="mb-3">
            {{ include('input/text.twig', {fieldLabel: 'Password', fieldId: 'password', type: 'password'}) }}
        </div>
        <div class="mb-3">
            {{ include('input/text.twig', {fieldLabel: 'Password repeat', fieldId: 'password_repeat', type: 'password'}) }}
        </div>
        <input type="submit" class="btn btn-primary">
    </form>

    <hr />

    <strong>Already have an account?</strong>
    <a href="{{ url("login") }}">Login</a>

{% endblock %}
