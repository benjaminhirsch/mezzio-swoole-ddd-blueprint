<div class="toast-wrapper">
    {% for message in  toasts %}
        <div class="toast toast-<?= $this->ce($type) ?>" role="alert" aria-live="assertive" aria-atomic="true" data-autohide="false">
            <div class="toast-body">
                <div class="headline">{{ message.title }}</div>
                <div class="text">
                    {{ message.body }}
                </div>
            </div>
        </div>
    {% endfor %}
</div>